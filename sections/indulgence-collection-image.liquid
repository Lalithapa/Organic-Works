<div class="{% if section.settings['use-container'] %}container{% endif %} indulgence-col-image-wrapper d-flex-center">
  {% assign mobileImageSetting = section.settings['mobile-image'] %}
  {% if mobileImageSetting.alt %}
    {% assign imageAlt = mobileImageSetting.alt %}
  {% else %}
    {% assign imageAlt = 'organic works collection image' %}
  {% endif %}

  <img
    src="{{ mobileImageSetting |  image_url }}"
    width="100%"
    height="100%"
    class="indulgence-col-image mobile d-flex-center"
    loading="lazy"
    alt="{{ imageAlt }}"
    id="{{ mobileImageSetting.id }}"
  >

  {% assign desktopImageSetting = section.settings['desktop-image'] %}

  <img
    src="{{ desktopImageSetting |  image_url }}"
    width="100%"
    height="100%"
    class="indulgence-col-image desktop d-flex-center"
    loading="lazy"
    alt="{{ imageAlt }}"
    id="{{ desktopImageSetting.id }}"
  >

  <p class="indulgence-col-text-on-image">{{ section.settings['text-on-image'] }}</p>
</div>

{% schema %}
{
  "name": "Indulgence Col Image",
  "class": "indulgence-col-image-section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "use-container",
      "default": false,
      "label": "use width container?"
    },
    {
      "type": "image_picker",
      "id": "mobile-image",
      "label": "Main Image Mobile",
      "info": "dimensions 9:16, 90px * 160px"
    },
    {
      "type": "image_picker",
      "id": "desktop-image",
      "label": "Main Image",
      "info": "dimensions 16:5, 160px * 50px"
    },
    {
      "type": "textarea",
      "id": "text-on-image",
      "label": "Text On Image",
      "default": "Experience harmonious blend of time-honored traditions and locally sourced ingredients, chosen for its unique ability to nurture and rejuvenate the skin."
    }
  ],
  "presets": [
    {
      "name": "Indulgence Col Image"
    }
  ]
}
{% endschema %}
