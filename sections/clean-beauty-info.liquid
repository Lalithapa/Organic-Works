<div
  class="{% if section.settings.showfullcontainer %}container{% endif %} clean-beauty-info-wrapper d-flex-center scroll-trigger animate--slide-in"
  style="background:{{ section.settings.sectionBackground }}"
>
  {% if section.settings.aboutImage1 and section.settings.showfullcontainer == false %}
    <img
      src="{{ section.settings.aboutImage1 |  image_url }}"
      width="100%"
      height="100%"
      class="our-approach-media d-flex-center"
      loading="lazy"
      alt="{{ section.settings.aboutImage1 }}"
    >
  {% endif %}
  {% comment %} {% if section.settings.showfullcontainer == false %}py-[30px]{% endif %} {% endcomment %}
  <div class="clean-beauty-detail d-flex-center">
    <div class="clean-beauty-title-wrapper home-title-sm d-flex-center">
      {{- section.settings.title -}}
    </div>

    <div class="clean-beauty-desctiption-wrapper d-flex-center">
      <p class="clean-beauty-desctiption home-summary">{{- section.settings.text -}}</p>
    </div>

    <div class="clean-beauty-icons-wrapper d-flex-center">
      {% for block in section.blocks %}
        <div class="clean-beauty-icon d-flex-center">
          {% assign imageSetting = block.settings.icon %}
          {% if imageSetting.alt %}
            {% assign imageAlt = imageSetting.alt %}
          {% else %}
            {% assign imageAlt = 'organic works clean beauty' %}
          {% endif %}

          <img
            src="{{ imageSetting |  image_url }}"
            width="100%"
            height="100%"
            class="clean-beauty-icon-img d-flex-center"
            loading="lazy"
            alt="{{ imageAlt }}"
            id="{{ imageSetting.id }}"
          >
        </div>
      {% endfor %}
    </div>
  </div>
  {% if section.settings.aboutImage2 and section.settings.showfullcontainer == false %}
    <img
      src="{{ section.settings.aboutImage2 |  image_url }}"
      width="100%"
      height="100%"
      class="our-approach-media d-flex-center"
      loading="lazy"
      alt="{{ section.settings.aboutImage2 | escape }}"
    >
  {% endif %}
</div>

{% schema %}
{
  "name": "Clean Beauty Info",
  "class": "clean-beauty-info-section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "showfullcontainer",
      "label": "Show Container",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "aboutImage1",
      "label": "Show Image 1"
    },
    {
      "type": "image_picker",
      "id": "aboutImage2",
      "label": "Show Image 2"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>CLEAN BEAUTY. IT'S IN OUR DNA</p>"
    },
    {
      "type": "color",
      "id": "sectionBackground",
      "label": "Add Background Color",
      "default": "#f5f7ff"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "99% of plant-based ingredients derived from organic farming and all products contain a minimum of 98% natural ingredients."
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon",
          "info": "Aspect Square 1:1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Clean Beauty Info"
    }
  ]
}
{% endschema %}
