  "name": "owAwards",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "award Image",
      "settings": [
        {
          "type": "url",
          "id": "product-link",
          "label": "Product Link"
        },
        {
          "type": "image_picker",
          "id": "awd",
          "label": "Main Award Image"
        },
        {
          "type": "image_picker",
          "id": "awdLogo",
          "label": "Award Logo"
        },
        {
          "type": "text",
          "id": "awdmain",
          "label": "Award Text"
        },
        {
          "type": "text",
          "id": "awdsubmain",
          "label": "Award Sub Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "owAwards"
    }
  ]
}
{% endschema %}

