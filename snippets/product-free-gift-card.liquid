<div class="cart-gift-card-wrapper !flex justify-center items-center pr-[12px] shrink-0 w-[260px]">
  <div class="cart-gift-card-img-wrapper w-[30%] h-full flex justify-center items-center rounded-4px">
    {% if isCustomData %}
      <img
        width="{{ product.featured_image.width }}"
        height="{{ product.featured_image.height }}"
        src="https://cdn.shopify.com/s/files/1/0355/3217/7453/files/Deep_Nourishing_Face_Mask_Glow_Cream_Cleanser_Mini.jpg?v=1714819274"
        alt="get free {{ product.title }}"
        class="w-full h-full asp3-4 object-contain rounded-4px"
      >

    {% else %}
      <img
        width="{{ product.featured_image.width }}"
        height="{{ product.featured_image.height }}"
        src="{{ product.featured_image.src | image_url }}"
        alt="get free {{ product.title }}"
        class="w-full h-full asp3-4 object-contain rounded-4px"
      >
    {% endif %}
  </div>

  <div class="cart-gift-card-info-wrapper w-[70%] h-[100px] md:h-[120px] flex flex-col justify-center items-start gap-y-[4px] ml-[12px]">
    {% assign handleSummarySize = product.metafields.custom.ingredient_subtext_with_size | split: ',' | last %}

    <dip class="w-full h-auto flex flex-col justify-center items-start gap-y-[4px] text-heading text-[13px] md:text-[15px] font-medium leading-[20px] tracking-[-0.13px] md:tracking-[-0.14px] uppercase">
      <p class="grow md:max-w-[80%]">
        {% if isCustomData -%}
          GLOW CREAM CLEANSER + DEEP NOURISHING FACE MASK
        {% else %}
          {{ product.title }}
        {% endif %}
      </p>

      <div class="w-full h-auto flex justify-start items-center gap-x-[10px] text-[#8e8e8e] text-[12px] md:text-[13px] font-medium leading-[18px] tracking-[-0.12px]">
        <p class="shrink">
          {% if isCustomData %}100ml+50ml{% else %} {{ handleSummarySize }}{% endif %}
        </p>
        <div class="grow flex justify-start items-center gap-x-[4px]">
          <p class="text-heading">&#40; Worth</p>
          <p class="text-heading">
            {%- if isCustomData %}Â£20{% else %} {{ product.price | money_without_trailing_zeros }}{% endif -%}
          </p>
          <p class="text-heading">&#41;</p>
        </div>
      </div>
    </dip>

    <p class="w-[80%] h-[32px] flex justify-center items-center text-heading text-center text-[11px] md:text-[13px] font-medium leading-[14px] bg-[#FAFAFA] tracking-[-0.12px] mt-auto">
      {{ text }}
    </p>
  </div>
</div>
